<resources>
    <declare-styleable name="CircularTimeLineMarker">
        <!-- Text -->
        <attr name="text" format="string"/>
        <attr name="fontSize" format="dimension"/>
        <attr name="textColor" format="color"/>

        <!-- Line -->
        <attr name="lineWidth" format="dimension"/>
        <attr name="outlineWidth" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="outlineColor" format="color"/>
        <attr name="lineLengthRatioToMarkerSize" format="float"/>
        <attr name="drawRunningOverLineStart" format="boolean"/>
        <attr name="drawRunningOverLineEnd" format="boolean"/>
        <attr name="orientation" format="enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>

        <!-- Marker -->
        <attr name="circleOutlineWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="circleOutlineColor" format="color"/>
        <attr name="markerSizeRatioToFontSize" format="float"/>
        <attr name="subMarkerSizeRatioToMarker" format="float"/>
        <attr name="paddingCircle" format="dimension"/>
        <attr name="marginMarkerStart" format="dimension"/>
        <attr name="marginMarkerEnd" format="dimension"/>
        <attr name="markerGravity" format="enum">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
            <enum name="center" value="2"/>
        </attr>

        <!-- Sub Marker -->
        <attr name="numOfSubMarker" format="integer"/>
        <attr name="subMarkerColor" format="color"/>
    </declare-styleable>
</resources>
