    <com.d.candy.f.awesometimetable.ui.CircularTimeLineMarker
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:textColor="#FFFFFF"
        app:circleColor="@color/colorPrimary"
        app:circleOutlineColor="@color/colorPrimaryDark"
        app:lineColor="@color/colorPrimary"
        app:outlineColor="@color/colorPrimaryDark"
        app:fontSize="14sp"
        app:text="1"
        app:lineWidth="8dp"
        app:drawRunningOverLineBegin="true"
        app:drawRunningOverLineEnd="true"
        app:orientation="vertical"
        app:paddingCircle="10dp"
        app:marginMarkerStart="4dp"
        app:marginMarkerEnd="4dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/linear_layout_mini_subject_card_container"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_mini_subject_card_title"
                android:text="Subject Name"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_mini_subject_card_location"
                android:layout_marginTop="4dp"
                android:text="Location"
                android:textSize="10dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>